{% extends "base.html.twig" %}

{% block title %}Edition d'un bien
{% endblock %}

{% block body %}

<div class="container mt-4">
		<h1>Editer un bien</h1>
		{{ form_start(form)}}
        <div class="row">
            <div class="col-md-6"> {{form_row (form.titre) }} </div>
            <div class="col-md-2"> {{form_row (form.surface) }} </div>
            <div class="col-md-2"> {{form_row (form.prix) }} </div>
        </div>
        <div class="row">
            <div class="col-md-3"> {{ form_row(form.pieces)}}</div>
            <div class="col-md-3"> {{ form_row(form.chambre)}}</div>
            <div class="col-md-3"> {{ form_row(form.etage)}}</div>
        </div>
        <div class="row">
            <div class="col-md-5"> {{form_row(form.adresse)}}</div>
            <div class="col-md-4"> {{form_row(form.ville)}}</div>
            <div class="col-md-1"> {{form_row(form.cp)}}</div>
        </div>
        <div class="row">
            <div class="col-md-10"> {{form_row(form.description)}}</div>
        </div>
            <div class="col-md-1"> {{form_row(form.actif)}}</div>

		{{ form_widget(form) }}
		    <button class="btn btn-primary">Editer</button>
		{{ form_end(form) }}


</div>
{% endblock %}
