{% extends "base.html.twig" %}

{% block title 'Liste des biens'%}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{form_row(form.surfaceMin)}}
                </div>
                <div class="col">
                    {{form_row(form.prixMax)}}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Recherche</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
    <div class="container mt-4">
        <h1>Voir tous nos biens</h1>

        <div class="row">
            {% for biens in liste_biens %}
                <div class="col-md-4">
                    {% include "pages/_bien.html.twig" %}
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(liste_biens)}}
        </div>
    </div>
{% endblock %}